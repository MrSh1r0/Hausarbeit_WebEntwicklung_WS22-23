{
  "private": true,
  "engines": {
    "node": ">=4"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "autoprefixer": "^9.5.1",
    "browser-sync": "^2.26.5",
    "chai": "^4.3.7",
    "cross-env": "^5.2.0",
    "cssnano": "^4.1.10",
    "del": "^4.1.1",
    "esbuild": "^0.16.10",
    "eslint": "^7.32.0",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-cli": "^2.2.0",
    "gulp-eslint": "^6.0.0",
    "gulp-htmlmin": "^5.0.1",
    "gulp-if": "^2.0.2",
    "gulp-imagemin": "^6.0.0",
    "gulp-load-plugins": "^1.6.0",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^8.0.0",
    "gulp-size": "^3.0.0",
    "gulp-uglify": "^3.0.2",
    "gulp-useref": "^3.1.6",
    "less": "^4.1.3",
    "less-plugin-clean-css": "^1.5.1",
    "lesshint": "^6.3.7",
    "mocha": "^6.2.3",
    "semistandard": "^16.0.1",
    "snazzy": "^9.0.0",
    "terser": "^5.16.1",
    "yargs": "13.2.4"
  },
  "scripts": {
    "serve:test": "cross-env NODE_ENV=test gulp serve",
    "serve:dist": "cross-env NODE_ENV=production gulp serve",
    "start": "gulp serve",
    "build": "cross-env NODE_ENV=production gulp",
    "test": "npm run serve:test",
    "tasks": "gulp --tasks",
    "clean": "gulp clean",
    "debug":"gulp debug",
    "lint":"gulp lint"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "Firefox ESR"
  ],
  "eslintConfig": {
    "parserOptions": {
      "sourceType": "module"
    },
    "env": {
      "es6": true,
      "node": true,
      "browser": true,
      "commonjs": false,
      "mocha": true
    },
    "plugins": [
      "sonarjs"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:sonarjs/recommended"
    ],
    "rules": {
      "no-console": "off",
      "indent": [
        "error",
        4
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "warn",
        "double"
      ]
    }
  },
  "dependencies": {
    "eslint-plugin-sonarjs": "^0.17.0"
  }
}
