{
    "env": {
        "browser": true,
        "commonjs": false,
        "es2022": true,
        "mocha": true,
        "node": true
    },
    "plugins": [
        "sonarjs"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:sonarjs/recommended"
    ],
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-console": "off", // off, warn, error
        "indent": [
            "error",
            2
        ], // Optionen via Array
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "warn",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}